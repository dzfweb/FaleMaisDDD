@model IEnumerable<FaleMaisDDD.MVC.Models.ViewModels.PrecoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Origem")
        </th>
        <th>
            @Html.DisplayName("Destino")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorMinuto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Origem.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorMinuto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
